// 7,634
void main() {
	int i;
	for (i=0; i<d2()+3; ++i) {
		switch(Random(10)) 
		{
		case 0:
			spawn_hostile_npc("abr_cr_hu_duergarftr_03");
			break;
		case 1:
			spawn_hostile_npc("abr_cr_hu_duergarrog_03");
			break;
		case 2:
		case 3:
		case 4:
			spawn_hostile_npc("abr_cr_hu_duergarrog_01");
			break;
		default:
			spawn_hostile_npc("abr_cr_hu_duergarftr_01");
		}
	}
	
	switch(Random(4)) 
	{
	case 0:
		spawn_hostile_npc("abr_cr_hu_duergarftr_05");
		break;
	case 1:
		spawn_hostile_npc("abr_cr_hu_duergarclr_05");
		break;
	case 2:
		spawn_hostile_npc("abr_cr_hu_duergarwiz_05");
		break;
	default:
		spawn_hostile_npc("abr_cr_hu_fduergarclr_05");
	}
}